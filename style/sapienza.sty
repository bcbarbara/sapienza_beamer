% useful packages
\usepackage{comment}
\usepackage{booktabs,tabularx}

\newcolumntype{b}{X}

% define location for all figures
\graphicspath{{figures/}}

% define colors from Sapienza
\definecolor{sapienzaBlue}{RGB}{0,45,153}
\definecolor{sapienzaRed}{RGB}{144,35,57}

% customize itemize and enumerate
\setbeamertemplate{itemize items}{\scalebox{0.9}{\text{\textbullet}}}
\setbeamertemplate{itemize subitem}{$\triangleright$}
\setbeamertemplate{enumerate items}[default]
\setbeamercolor{itemize item}{ fg=black}
\setbeamercolor{itemize subitem}{ fg=black}
\setbeamercolor{itemize subitem}{ fg=gray!50}
\setbeamercolor{itemize subsubsubitem}{ fg=gray!20}
\setbeamercolor{enumerate item}{ fg=black}
\setbeamercolor{enumerate subitem}{ fg=black}
\setbeamercolor{enumerate subsubitem}{ fg=black}
\setbeamercolor{enumerate subsubsubitem}{ fg=black}

% update colors of block environment
\setbeamercolor{block title}{bg=while,fg=sapienzaBlue}

% change header color to university blue
\setbeamercolor{headline}{bg=white,fg=sapienzaBlue}
\setbeamercolor*{frametitle}{parent=headline}

% title and subtitle color and background color
\setbeamercolor{title}{bg=white,fg=sapienzaRed}
\setbeamercolor{subtitle}{bg=white,fg=sapienzaBlue}
\setbeamercolor{author}{bg=white,fg=black}

% title and subtitle bold
\setbeamerfont{title}{series=\bfseries}
\setbeamerfont{subtitle}{series=\bfseries}
%\setbeamerfont{author}{series=\bfseries}

\setbeamerfont{title}{size=\tiny}		

% block structures
\newenvironment<>{redblock}[1]{%
  \setbeamercolor{block title}{fg=white,bg=sapienzaRed!100!black}%
  \begin{block}#2{#1}}{\end{block}}
\newenvironment<>{blueblock}[1]{%
  \setbeamercolor{block title}{fg=white,bg=sapienzaBlue!100!black}%
  \begin{block}#2{#1}}{\end{block}}
\addtobeamertemplate{blueblock}{%
  \setlength{\textwidth}{0.9\textwidth}%
}{}

% uncomment to add and modify footer
%\begin{comment}
\setbeamercolor{footlinecolor}{bg=white,fg=black}
\makeatother
\setbeamertemplate{footline}
{%
	\leavevmode%
	\hbox{\begin{beamercolorbox}[wd=0.6\paperwidth,ht=1.5ex,dp=2.125ex,leftskip=.3cm,rightskip=.9cm]{footlinecolor}%
	\textcolor{sapienzaRed}{\rule{0.965\paperwidth}{1pt}}
	\text{\textbf{\insertshorttitle}\hskip12em \insertshortsubtitle\hskip23.8em\hfill\insertframenumber}
	\end{beamercolorbox}%
	}%
	\vskip0pt%
}

\makeatletter
%\end{comment}

% uncomment to remove navigation buttons
\setbeamertemplate{navigation symbols}{}


% modify title slide
\newcommand{\InsertTitle}{
	{
		%\setbeamertemplate{logo}{} % remove logo (if any)
		\setbeamertemplate{headline}{} % remove header (if any)
		\setbeamertemplate{footline}{} % remove footer (if any)
		\begin{frame}[noframenumbering] % do not count title frame in frame numbers
			\titlepage
			\vspace{15pt}
			\begin{figure}
			\begin{tabularx}{\textwidth}{X}
				\centering
				\includegraphics[width=0.3\textwidth]{diag-logo.png}
				\hspace{0.5cm}
				\includegraphics[width=0.25\textwidth]{ku_leuven_logo.png}
				\hspace{1cm}
				\includegraphics[width=0.1\textwidth]{ufreiburg_logo.png}
			\end{tabularx}
			\end{figure}
		\end{frame}
	}
}

